.bartitle
	%h2.pull-left= t('model.collections_group').html_safe
	.btn-toolbar.text-right
		.btn-group
			= link_to new_admin_collections_group_path, :class => 'btn', :title => t('collections_group.new').html_safe do
				%i.icon-plus

	.well.form-actions
		%form.form-search
			= text_field_tag :q, nil, :placeholder => t('collections_group.search').html_safe, :class => 'searchbar pull-left', 'data-provide' => 'typeahead', :klass => "collections_groups"
			%label{:for => 'collection_type'} 
				= t('model.collection_type').html_safe
			= select_tag :collection_type, options_for_select(types), :class => 'large filter', :klass => 'collections_groups'
			%label{:for => 'enabled'} 
				= t('collections_group.enabled').html_safe
			= select_tag :activation, options_for_select(booleans), :class => 'small filter', :klass => 'collections_groups'
			= link_to admin_reset_path('collections_groups'), :remote => true, :class => 'btn reset', :title => t('titles.reset').html_safe do
				%i.icon-retweet

	#collections_groups.partial
		= render :partial => 'listing', :locals => {:collections_groups => @objects}
