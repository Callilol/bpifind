.bartitle
	%h2.pull-left= t('model.collections_group').html_safe
	.btn-toolbar.text-right
		.btn-group
			= link_to new_admin_collections_group_path, :class => 'btn', :title => t('collections_group.new').html_safe do
				%i.icon-plus

	.well.form-actions
		%form.form-search
			= text_field_tag :q, nil, :placeholder => t('collections_group.search').html_safe, :class => 'searchbar pull-left', 'data-provide' => 'typeahead', :klass => "/collections_groups"
		= paginate @collections_groups

	#collections_groups
		= render :partial => 'listing', :locals => {:collections_groups => @collections_groups}
