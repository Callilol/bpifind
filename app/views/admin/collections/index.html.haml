.bartitle
	%h2.pull-left= t('model.collection').html_safe
	.btn-toolbar.text-right
		.btn-group
			= link_to new_admin_collection_path, :class => 'btn', :title => t('collection.new').html_safe do
				%i.icon-plus

	.well.form-actions
		%form.form-search
			= text_field_tag :q, nil, :placeholder => t('collection.search').html_safe, :class => 'searchbar pull-left', 'data-provide' => 'typeahead', :klass => "collections"
			%label{:for => 'status'} 
				= t('collection.status').html_safe
			= select_tag :harvest_status, options_for_select(statuses), :class => 'large filter', :klass => "collections"
			= link_to admin_reset_path('collections'), :remote => true, :class => 'btn reset', :title => t('titles.reset').html_safe do
				%i.icon-retweet

	#collections.partial
		= render :partial => 'listing', :locals => {:collections => @objects}
