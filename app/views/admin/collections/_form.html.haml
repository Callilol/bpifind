= simple_form_for [:admin, @collection], :html => {:class => 'form-horizontal well'} do |f|
	= f.input :name
	= f.input :full_name
	= f.input :host
	= f.input :user, input_html: { :autocomplete => :off }
	= f.input :password, input_html: { :autocomplete => :off }
	= f.button :submit, @collection.new_record? ? t('helpers.submit.create').html_safe : t('helpers.submit.update').html_safe
	= link_to t('helpers.submit.cancel').html_safe, admin_collections_path, :class => 'btn'

