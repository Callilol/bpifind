%legend.bartitle
	%h2.pull-left= @user.name.html_safe if @user.name
	.btn-toolbar.text-right 
		.btn-group
			= link_to edit_admin_user_path(@user), :class => 'btn', :title => t('user.edit').html_safe do
				%i.icon-edit

%dl.dl-horizontal
	%dt= t('user.name').html_safe
	%dd= @user.name.html_safe 
	%dt= t('user.email').html_safe
	%dd= @user.email.html_safe 

= link_to t('helpers.submit.back').html_safe, :back, :class => 'btn'
