.bartitle
	%h2.pull-left= t('model.user').html_safe
	.btn-toolbar.text-right
		.btn-group
			= link_to new_admin_user_path, :class => 'btn', :title => t('user.new').html_safe do
				%i.icon-plus
					
	.well.form-actions
		%form.form-search
			= text_field_tag :q, nil, :placeholder => t('user.search').html_safe, :class => 'searchbar pull-left', 'data-provide' => 'typeahead', :klass => "users"
			%label{:for => 'status'} 
				= t('user.role').html_safe
			= select_tag :role, options_for_select(roles), :class => 'large filter', :klass => 'users'
			= link_to admin_reset_path('users'), :remote => true, :class => 'btn reset', :title => t('titles.reset').html_safe do
				%i.icon-retweet

	#users.partial
		= render :partial => 'listing', :locals => {:users => @objects}
