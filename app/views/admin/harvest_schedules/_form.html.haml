= simple_form_for [:admin, @harvest_schedule], :html => {:class => 'form-horizontal'} do |f|
	= f.input :name
	= f.input :harvest_day, collection: HarvestSchedule::DAYS, include_blank: false 
	= f.input :harvest_time 
	= f.input :partial
	= f.input :active
	=# f.input :collection_search, as: :searching
	= f.input :collections, collection: @harvest_schedule.collections

	= f.button :submit
	= link_to 'Annuler', admin_harvest_schedules_path, :class => 'btn'

